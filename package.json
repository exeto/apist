{
  "name": "apist",
  "version": "0.1.0",
  "description": "Simple REST API client",
  "main": "lib/index.js",
  "repository": "exeto/apist",
  "author": "Timofey Dergachev <t@exeto.me> (https://exeto.me/)",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src",
    "test": "npm run lint && nyc ava --require babel-register",
    "clean": "rm -rf lib dist",
    "build:commonjs": "babel src --out-dir lib",
    "build:umd": "NODE_ENV=development webpack src/index.js dist/apist.js",
    "build:umd:min": "NODE_ENV=production webpack src/index.js dist/apist.min.js",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run clean && npm run test && npm run build"
  },
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "keywords": [
    "api",
    "rest",
    "http",
    "client",
    "request"
  ],
  "dependencies": {
    "avali": "^0.1.0",
    "qs": "^6.2.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "coveralls": "^2.11.12",
    "eslint": "^3.2.2",
    "eslint-config-exeto-base": "^2.0.0",
    "eslint-plugin-import": "^2.0.0",
    "nock": "^9.0.0",
    "node-fetch": "^1.6.0",
    "nyc": "^9.0.1",
    "webpack": "^1.13.1"
  }
}
